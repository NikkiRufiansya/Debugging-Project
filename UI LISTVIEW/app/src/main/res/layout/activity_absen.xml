<RelativeLayout
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/nisSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIS : "
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/tvNis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="065601"
                android:padding="2dp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/tvvTanggal"
                android:text="Tanggal : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTanggal"
                android:text="13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=", "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvvBulan"
                android:text="Bulan : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvBulan"
                android:text="Oktober"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=", "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvvTahun"
                android:text="Tahun : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTahun"
                android:text="2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/tvvJam"
                android:text="Jam : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvJam"
                android:text="17:15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/tvvStatus"
                android:text="Status Kehadiran : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvStatus"
                android:text="Masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvKelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textSize="16dp"
                android:visibility="gone"
                android:padding="5dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>