<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Pembayaran"
                android:textSize="25dp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                     <TextView
                    android:id="@+id/uS2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SPP"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cSPPPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading......"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/uJ2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="LKS"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cLKSPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading......"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/uJ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DLL"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cDLLPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading......"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/uT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Bulan"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cBulanPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading......"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/uH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tahun"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cTahunPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Loading......"
                        android:textSize="20dp" />




                    <TextView
                        android:id="@+id/cIdJadwal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="761dp"
                        android:text="Loading......"
                        android:visibility="gone"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="30dp"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:background="@android:color/white">

        <Button
            android:textColor="#FFF"
            android:layout_alignParentRight="true"

            android:backgroundTint="#F37534"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/kembaliPembayaran"
            android:text="Kembali" />
    </RelativeLayout>
</RelativeLayout>